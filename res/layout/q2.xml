<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fastScrollEnabled="true">
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">
	    <ImageView
	        android:id="@+id/iv"
	        android:layout_width="320dp"
	        android:layout_height="480dp"
	        android:adjustViewBounds="true"
	        android:scaleType="fitCenter"
	        android:src="@drawable/a0002_002442_m" />
	    <TextView
        	android:id="@+id/q2text"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:focusable="true"
        	android:text="@string/q2text" />
	    <Button
	        android:id="@+id/q2a1button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/q2a1button" />
	    <Button
	        android:id="@+id/q2a2button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/q2a2button" />
	    <Button
	        android:id="@+id/q2a3button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/q2a3button" />
	    <Button
	        android:id="@+id/q2a4button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/q2a4button" />
	    <Button
	        android:id="@+id/q2a5button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/q2a5button" />
	</LinearLayout>
</ScrollView>